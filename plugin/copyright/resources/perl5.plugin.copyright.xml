<idea-plugin package="com.perl5.lang.perl.idea.copyright">
  <dependencies>
    <plugin id="com.intellij.copyright"/>
  </dependencies>
  <extensions defaultExtensionNs="com.intellij.copyright">
    <updater filetype="Perl5 Package" implementationClass="com.perl5.lang.perl.idea.copyright.PerlUpdateCopyrightsProvider"/>
    <variablesProvider filetype="Perl5 Package" implementationClass="com.perl5.lang.perl.idea.copyright.PerlCopyrightsVariablesProvider"/>
  </extensions>
</idea-plugin>