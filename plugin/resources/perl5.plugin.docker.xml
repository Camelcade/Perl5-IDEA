<idea-plugin package="com.perl5.lang.perl.idea.sdk.host.docker">
  <dependencies>
    <module name="intellij.clouds.docker.remoteRun"/>
    <plugin id="com.intellij.modules.ultimate"/>
  </dependencies>

  <extensions defaultExtensionNs="com.perl5">
    <hostHandler key="docker"
                 implementationClass="com.perl5.lang.perl.idea.sdk.host.docker.PerlDockerHandler"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <projectService serviceImplementation="com.perl5.lang.perl.idea.sdk.host.docker.PerlDockerProjectSettings"/>
  </extensions>


</idea-plugin>