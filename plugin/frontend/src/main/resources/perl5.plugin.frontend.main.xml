<idea-plugin>
  <resource-bundle>messages.PerlBundle</resource-bundle>
  <dependencies>
    <module name="intellij.platform.frontend"/>
    <module name="perl5.plugin.common.main"/>
  </dependencies>
  <extensions defaultExtensionNs="com.intellij">
    <editorSmartKeysConfigurable
        key="perl"
        implementation="com.perl5.lang.perl.idea.editor.smartkeys.options.PerlSmartKeyOptions"/>
    <codeFoldingOptionsProvider instance="com.perl5.lang.perl.idea.folding.PerlFoldingOptionsProvider"/>
  </extensions>
</idea-plugin>