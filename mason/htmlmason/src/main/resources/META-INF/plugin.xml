<!--suppress PluginXmlPluginLogo -->
<idea-plugin url="https://github.com/hurricup/Perl5-IDEA">
  <id>com.perl5.lang.mason.htmlmason</id>
  <name>HTML::Mason Support</name>
  <vendor email="hurricup@gmail.com" url="https://github.com/hurricup">Alexandr Evstigneev</vendor>
  <category>Custom Languages</category>

  <!-- please  see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products  -->

  <dependencies>
    <plugin id="com.perl5"/>
    <plugin id="com.perl5.lang.mason.framework"/>
    <plugin id="com.intellij.modules.lang"/>
  </dependencies>

  <content>
    <module name="perl5.lang.mason.htmlmason.common.main" loading="required"/>
    <module name="perl5.lang.mason.htmlmason.core.main"/>
    <module name="perl5.lang.mason.htmlmason.frontend.main"/>
    <module name="perl5.lang.mason.htmlmason.frontend.split.main"/>
  </content>
</idea-plugin>