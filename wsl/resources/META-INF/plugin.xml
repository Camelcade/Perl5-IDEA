<idea-plugin url="https://github.com/hurricup/Perl5-IDEA">
  <id>com.perl5.transport.wsl</id>
  <name>Perl WSL Support</name>
  <vendor email="hurricup@evstigneev.com" url="http://www.evstigneev.com">Alexandr Evstigneev</vendor>
  <category>Custom Languages</category>

  <!-- please  see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products  -->

  <depends>com.perl5</depends>
  <depends>com.intellij.modules.ultimate</depends>

  <extensions defaultExtensionNs="com.perl5">
    <hostHandler key="wsl"
                 implementationClass="com.perl5.lang.perl.idea.sdk.host.wsl.PerlWslHandler"/>
  </extensions>

  <extensions defaultExtensionNs="com.intellij">
    <consoleInputFilterProvider implementation="com.perl5.lang.perl.idea.sdk.host.wsl.PerlWslInputFilterProvider"/>
  </extensions>

</idea-plugin>